@model DigitalWorldStore.WebUI.Models.RegisterModel

@{
    Layout = null;
}

<h2>Регистрация</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <h4>Регистрация пользователя</h4>
        <hr />
        @Html.ValidationSummary(false)
        <div>
            Введите Ваше Имя
            <div>
                @Html.EditorFor(model => model.UserName)
            </div>
        </div>
        <div>
            Введите Вашe Фамилию
            <div>
                @Html.EditorFor(model => model.UserLastName)
            </div>
        </div>
        <div>
            <div>
                Электронный адрес
                <div>
                    @Html.EditorFor(model => model.Email)
                </div>
            </div>
        </div>
        <div>
            Пароль
            <div>
                @Html.EditorFor(model => model.Password)
            </div>
        </div>
        <div>
            Подтвердить пароль
            <div>
                @Html.EditorFor(model => model.PasswordConfirm)
            </div>
        </div>
        <div>
            <div>
                <input type="submit" value="Зарегистрировать" />
            </div>
            @Html.ActionLink("Войти", "Login", "UserAccount", null, new { @class = "btn" })
        </div>
    </div>
    }
@Html.ActionLink("Отмена", "Index", "Home", null, new { @class = "btn_" })
@Html.ActionLink("Выйти", "Logout", "UserAccount", null, new { @class = "btn_" })

